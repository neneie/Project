@page "/courses"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject CourseService CourseService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Курсы</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Курсы</h2>
        <AuthorizeView>
            <Authorized>
                <a href="/courses/create" class="btn btn-primary">Новый курс</a>
            </Authorized>
        </AuthorizeView>
    </div>

    @if (courses == null)
    {
        <p>Загрузка курсов...</p>
    }
    else if (courses.Count == 0)
    {
        <div class="alert alert-info">Курсов нет</div>
    }
    else
    {
        <div class="row">
            @foreach (var course in courses)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <strong>@course.Title</strong>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small">@course.Category | @course.DurationHours ч | Уровень: @course.DifficultyLevel</p>
                            <p class="small">@(course.Description?.Substring(0, Math.Min(100, course.Description?.Length ?? 0)) ?? "")...</p>
                        </div>
                        <div class="card-footer">
                            <a href="/courses/@course.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            <a href="/courses/edit/@course.Id" class="btn btn-sm btn-warning">Изменить</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Course>? courses;

    protected override async Task OnInitializedAsync()
    {
        courses = await CourseService.GetAllCoursesAsync();
    }
}
