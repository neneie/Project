﻿
@page "/courses/{CourseId:int}"
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Models
@using Hits.Blazor.Todo.FinalProject.GubanovaSO.Data.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject CourseService CourseService
@inject EnrollmentService EnrollmentService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>@(course?.Title ?? "Курс") - Образовательная платформа</PageTitle>

@if (course == null)
{
    <div class="container mt-4">
        <div class="alert alert-danger">Курс не найден</div>
        <a href="/courses" class="btn btn-primary">Вернуться</a>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-8">
                <h2>@course.Title</h2>
                <p class="text-muted">@course.Category | @course.DurationHours часов | Уровень: @course.DifficultyLevel</p>

                <h4 class="mt-4">Описание</h4>
                <p>@course.Description</p>

                <h4 class="mt-4">Описание</h4>
                <p>@course.Description</p>

                <h4 class="mt-4">Содержание курса</h4>
                @if (string.IsNullOrWhiteSpace(course.Content))
                {
                    <p class="text-muted">Содержание не заполнено</p>
                }
                else
                {
                    <div class="card">
                        <div class="card-body">
                            @((MarkupString)course.Content.Replace("\n", "<br />"))
                        </div>
                    </div>
                }

            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        Информация
                    </div>
                    <div class="card-body">
                        <p><strong>Категория:</strong> @course.Category</p>
                        <p><strong>Часов:</strong> @course.DurationHours</p>
                        <p><strong>Уровень сложности:</strong> @course.DifficultyLevel</p>
                    </div>
                    <div class="card-footer">
                        @if (errorMessage != null)
                        {
                            <div class="alert alert-danger alert-sm">@errorMessage</div>
                        }

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success alert-sm">@successMessage</div>
                        }

                        <AuthorizeView>
                            <Authorized>
                                @if (isEnrolled)
                                {
                                    <button class="btn btn-primary w-100" disabled>Вы уже записаны</button>
                                }
                                else
                                {
                                    <button class="btn btn-success w-100" @onclick="EnrollCourse" disabled="@isLoading">
                                        @if (isLoading)
                                        {
                                            <span>Записываю...</span>
                                        }
                                        else
                                        {
                                            <span>Записаться</span>
                                        }
                                    </button>
                                }
                            </Authorized>
                            <NotAuthorized>
                                <a href="/Account/Login" class="btn btn-primary w-100">Войти</a>
                            </NotAuthorized>
                        </AuthorizeView>

                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="/courses" class="btn btn-primary">Вернуться к курсам</a>
        </div>
    </div>
}

@code {
    [Parameter]
    public int CourseId { get; set; }

    private Course? course;
    private bool isEnrolled = false;
    private bool isLoading = false;
    private string? userId;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            course = await CourseService.GetCourseByIdAsync(CourseId);

            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                if (!string.IsNullOrEmpty(userId) && course != null)
                {
                    var enrollment = await EnrollmentService.GetEnrollmentAsync(userId, CourseId);
                    isEnrolled = enrollment != null;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Ошибка: " + ex.Message;
        }
    }

    private async Task EnrollCourse()
    {
        if (string.IsNullOrEmpty(userId))
        {
            return;
        }

        try
        {
            isLoading = true;
            StateHasChanged();

            var enrollmentId = await EnrollmentService.EnrollUserAsync(userId, CourseId);

            if (enrollmentId > 0)
            {
                isEnrolled = true;
                StateHasChanged();

                await Task.Delay(1000);
                Navigation.NavigateTo("/my-learning");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка записи: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    
}